---
import type { Project } from '../constants/projects';

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="card h-full w-full shadow-xl bg-base-200">
  {project.image &&
    <figure><img src={project.image} alt={project.name} /></figure>
  }
  <div class="card-body">
    <h2 class="card-title font-bold text-3xl">{project.name}</h2>
    <p>{project.description}</p>
    <div class="card-actions justify-end">
      {project.github &&
        <a href={project.github} class="btn btn-primary" target="_blank">GitHub</a>
      }
      {project.demo &&
        <a href={project.demo} class="btn btn-secondary" target="_blank">View Demo</a>
      }
      {project.website &&
        <a href={project.website} class="btn btn-secondary" target="_self">More Info</a>
      }
    </div>
  </div>

</div>
