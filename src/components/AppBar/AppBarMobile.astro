---
import { menu } from "../../constants/menu"
---

<input id="appbar-drawer" type="checkbox" class="drawer-toggle" />
<nav class="drawer-side z-[99]">
  <ul class="bg-base-300 w-full min-h-screen p-6 flex flex-col gap-4 z-[99]">
    <li>
      <div class="flex flex-row w-full align">
        <a href="/#top" class="btn-ghost p-2 w-full rounded-md">
          <h3 class="font-bold text-xl">Rinaldo Lee</h3>
        </a>
        <label class="ml-auto btn-ghost p-2 rounded-md" role="link" for="appbar-drawer">
          <img src="/img/icons/close.svg" />
        </label>
      </div>
    </li>
    {menu.map((item) => (
      <li class="btn-ghost p-2 w-full rounded-md"><a href={item.path} target={item.external ? '_blank' : '_self'}>{item.title}</a></li>

    ))}
  </ul>
</nav>
